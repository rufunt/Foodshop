<h1>Welcome в нашу кофейню!!</h1>

<div class="row">
	
	<% @products.each do |p| %>
		<div class="col-md-3">
		  <div>
		    <%= p.title %>
		  </div>
		  <div>
		    <img src="<%= p.path_to_image %>" %>
		  </div>
		  <div>
		    <%= p.description %>
		  </div> 
		  <div>
		    Размер: <%= p.size %> см
		  </div>
		  <div>
		    Цена: <%= p.price %> руб
		  </div> 
		  </br>
		  <div>
		    <button class="btn-sm btn-success">Добавить в корзину</button>
		  </div>

		  
			
		</div>
	<% end %>
</div>

</br>

